<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray100"
    android:paddingBottom="12dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/red_oval"
                android:padding="8dp"
                android:src="@drawable/bg"
                android:elevation="2dp"
                android:id="@+id/user_profile_picture_recycler_item"
                android:layout_width="96dp"
                android:layout_height="96dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--name and action      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/sme_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="محمد أحمد"
                    android:textStyle="bold"
                    android:textSize="@dimen/xl_text_size"
                    />
                <!--//action-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/red_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="رسالة " />
                    <ImageButton
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_settings_white_18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="36dp"
                        android:layout_height="24dp"
                        android:text="settings"
                        android:background="@drawable/red_frame"
                        android:layout_marginRight="12dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--//about number-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--//post-->
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:tint="@color/blue_gray"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_border_color_white_36dp"
                        />
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/mid_text_size"
                        android:layout_gravity="center"
                        android:textColor="@color/sme_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        />

                </LinearLayout>
                <!--subscriper-->
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:tint="@color/blue_gray"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_rss_feed_black_48dp"
                        />
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/mid_text_size"
                        android:layout_gravity="center"
                        android:textColor="@color/sme_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/gray50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_margin="12dp"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/sme_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تفاصيل عن العميل  "
            />
    </android.support.v7.widget.CardView>
</LinearLayout>