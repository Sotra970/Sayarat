<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="12dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardElevation="3dp"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.widget.NestedScrollView
                android:background="@color/gray100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray100"
                        android:paddingBottom="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:foreground="@drawable/red_oval"
                                    android:elevation="2dp"
                                    android:id="@+id/profile_img"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp" />
                            </FrameLayout>


                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!--name and action      -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:gravity="right"
                                        android:id="@+id/profile_name"
                                        android:layout_weight="1"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="محمد أحمد"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/xl_text_size"
                                        />
                                    <!--//action-->
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Button
                                            android:id="@+id/profile_send_msg"
                                            android:textStyle="bold"
                                            android:textColor="@color/colorPrimary"
                                            android:background="@drawable/red_frame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            android:text="@string/message" />
                                        <Button
                                            android:layout_marginTop="8dp"
                                            android:id="@+id/profile_settings"
                                            android:textStyle="bold"
                                            android:textColor="@color/colorPrimary"
                                            android:background="@drawable/red_frame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="24dp"
                                            android:text="@string/settings" />
                                        <!--<ImageButton-->
                                        <!--android:layout_marginTop="8dp"-->
                                        <!--android:id="@+id/profile_settings"-->
                                        <!--android:tint="@color/colorPrimary"-->
                                        <!--android:src="@drawable/ic_settings_white_18dp"-->
                                        <!--android:textStyle="bold"-->
                                        <!--android:textColor="@color/colorPrimary"-->
                                        <!--android:layout_width="36dp"-->
                                        <!--android:layout_height="24dp"-->
                                        <!--android:text="settings"-->
                                        <!--android:background="@drawable/red_frame"-->
                                        <!--android:layout_marginRight="12dp"-->
                                        <!--/>-->
                                    </LinearLayout>

                                </LinearLayout>
                                <!--//about number-->
                                <LinearLayout
                                    android:visibility="gone"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <!--//post-->
                                    <LinearLayout
                                        android:layout_marginTop="12dp"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginRight="12dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:tint="@color/blue_gray"
                                            android:layout_width="36dp"
                                            android:layout_height="36dp"
                                            android:src="@drawable/ic_edit_white_36dp"
                                            />
                                        <TextView
                                            android:layout_marginTop="4dp"
                                            android:textSize="@dimen/mid_text_size"
                                            android:layout_gravity="center"
                                            android:textColor="@color/sme_black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="6"
                                            />

                                    </LinearLayout>
                                    <!--subscriper-->
                                    <LinearLayout
                                        android:layout_marginTop="12dp"
                                        android:layout_marginLeft="24dp"
                                        android:layout_marginRight="24dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:tint="@color/blue_gray"
                                            android:layout_width="36dp"
                                            android:layout_height="36dp"
                                            android:src="@drawable/ic_rss_feed_black_48dp"
                                            />
                                        <TextView
                                            android:layout_marginTop="4dp"
                                            android:textSize="@dimen/mid_text_size"
                                            android:layout_gravity="center"
                                            android:textColor="@color/sme_black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="6"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <android.support.v7.widget.CardView
                            app:cardElevation="1dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/gray10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">




                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:visibility="visible"
                                        android:paddingLeft="24dp"
                                        android:paddingRight="24dp"
                                        android:layout_margin="12dp"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/phone"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/phone"
                                        android:visibility="visible"
                                        android:paddingLeft="24dp"
                                        android:paddingRight="24dp"
                                        android:layout_margin="12dp"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:visibility="visible"
                                        android:paddingLeft="24dp"
                                        android:paddingRight="24dp"
                                        android:layout_margin="12dp"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/user_id"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:id="@+id/_user_id"
                                        android:visibility="visible"
                                        android:paddingLeft="24dp"
                                        android:paddingRight="24dp"
                                        android:layout_margin="12dp"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView

                                        android:visibility="visible"
                                        android:paddingLeft="12dp"
                                        android:paddingRight="24dp"
                                        android:layout_margin="12dp"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/email"
                                        />
                                    <TextView
                                        android:layout_gravity="center"
                                        android:gravity="right"
                                        android:layout_weight="1"
                                        android:id="@+id/email"
                                        android:visibility="visible"
                                        android:textSize="@dimen/smal_text_size"
                                        android:textColor="@color/sme_black"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        />
                                </LinearLayout>



                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <FrameLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_gravity="center"
                            android:id="@+id/no_ads_loading"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:visibility="gone"
                            android:textSize="@dimen/xl_text_size"
                            android:textColor="@color/sme_black"
                            android:id="@+id/no_ads"
                            android:text="@string/no_ads"
                            android:gravity="center"
                            android:layout_margin="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/myad_profile_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </android.support.v7.widget.RecyclerView>
                    </FrameLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_dashboard"
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <android.support.v7.widget.CardView
            android:elevation="3dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
            <LinearLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ارسال رساله"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorAccent"
                    android:id="@+id/desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc_input"
                        android:hint="الرساله"
                        android:textColor="@color/black"/>
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الغاء"
                        android:id="@+id/cancel_btn"
                        android:textColor="@color/black"/>
                    <Button

                        android:background="@drawable/accent_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/send_btn"
                        android:text="ارسال"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>


    <FrameLayout
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/loadingSpinner"
        android:elevation="12dp"
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>