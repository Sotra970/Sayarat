             android:layout_height="match_parent"/>

     </android.support.v4.widget.SwipeRefreshLayout>
    <FrameLayout
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/reval_bg"
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
<LinearLayout
    android:gravity="center"
    android:layout_margin="12dp"
    android:layout_gravity="bottom|right"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:alpha="0"
    android:id="@+id/fab1_container"
    android:translationY="96dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:tint="@color/colorAccent"
        android:background="@drawable/white_circle"
        android:id="@+id/add_car"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="visible"
        android:src="@drawable/ic_add_white_18dp" />
    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorSecondaryText"
            android:text="@string/add_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:alpha="0"
        android:id="@+id/fab2_container"
        android:translationY="48dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="3dp"
            android:tint="@color/colorAccent"
            android:background="@drawable/white_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/req_car"
            android:visibility="visible"
            android:src="@drawable/ic_add_white_18dp" />
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/order_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageButton
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/fab"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="bottom|right"
        android:elevation="4dp"
        android:background="@drawable/accent_circle"
        android:src="@drawable/ic_add_white_24dp" />
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
<android.support.design.widget.NavigationView
    app:headerLayout="@layout/nav_hedar"
    app:itemTextColor="@color/white"
    app:itemIconTint="@color/white"
android:id="@+id/nav_view"
    app:menu="@menu/main_menu"
android:background="@color/blue_gray"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
    >
</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>