<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sayarat.Activity.UploadActivity">

<FrameLayout
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="12dp"
        android:id="@+id/search_main_container"
        app:cardBackgroundColor="@color/white"
        android:transitionName="@string/search_transtion"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/search_content"
                android:gravity="center"
                android:layout_gravity="center"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                tools:context=".Fragments.Add_Car_Fragment">
                <ImageButton
                    android:id="@+id/close"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_close_black_48dp"
                    android:background="@drawable/red_frame_circle"
                    android:layout_margin="24dp"
                    android:layout_width="72dp"
                    android:layout_height="72dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <android.support.v7.widget.AppCompatSpinner
                            android:background="@drawable/red_frame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/com_spiner"
                            android:spinnerMode="dropdown"
                            android:clickable="true" />
                        <FrameLayout
                            android:background="@drawable/red_frame"
                            android:layout_gravity="center|left"
                            android:layout_width="36dp"
                            android:layout_height="match_parent" >
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_gravity="center"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <android.support.v7.widget.AppCompatSpinner
                            android:prompt="@string/city"
                            android:background="@drawable/red_frame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/city_spiner"
                            android:spinnerMode="dropdown"
                            android:clickable="true" />
                        <FrameLayout
                            android:background="@drawable/red_frame"
                            android:layout_gravity="center|left"
                            android:layout_width="36dp"
                            android:layout_height="match_parent" >
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_gravity="center"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <android.support.v7.widget.AppCompatSpinner
                            android:prompt="@string/city"
                            android:background="@drawable/red_frame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/model_spiner"
                            android:spinnerMode="dropdown"
                            android:clickable="true" />
                        <FrameLayout
                            android:background="@drawable/red_frame"
                            android:layout_gravity="center|left"
                            android:layout_width="36dp"
                            android:layout_height="match_parent" >
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_gravity="center"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        </FrameLayout>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_marginRight="8dp"
                        android:background="@drawable/red_frame"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <EditText
                            android:id="@+id/add_counter_input"
                            android:textColorHint="@color/colorPrimary"
                            android:background="@android:color/transparent"
                            android:paddingRight="12dp"
                            android:hint="@string/car_counter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <android.support.v7.widget.AppCompatSpinner
                            android:background="@drawable/red_frame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/use_type_spiner"
                            android:spinnerMode="dropdown"
                            android:clickable="true" />
                        <FrameLayout
                            android:background="@drawable/red_frame"
                            android:layout_gravity="center|left"
                            android:layout_width="36dp"
                            android:layout_height="match_parent" >
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_gravity="center"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginRight="4dp"
                        android:minHeight="36dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="38dp">
                        <android.support.v7.widget.AppCompatSpinner
                            android:background="@drawable/red_frame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/automatic_spiner"
                            android:spinnerMode="dropdown"
                            android:clickable="true" />
                        <FrameLayout
                            android:background="@drawable/red_frame"
                            android:layout_gravity="center|left"
                            android:layout_width="36dp"
                            android:layout_height="match_parent" >
                            <ImageView
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:layout_gravity="center"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/under_worenty"
                        android:textColor="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@string/under_worenty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>


                <Button
                    android:id="@+id/search_btt"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/accent_btn"
                    android:layout_gravity="center"
                    android:text="@string/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:alpha="0"
        android:id="@+id/unsucess_con"
        android:visibility="gone"
        app:cardElevation="0dp"
        android:translationZ="0dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/unsucess_text"
            android:alpha="0"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/xl_text_size"
            android:textColor="@color/colorAccent"
            android:text="@string/no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:scaleY="0.1"
        android:id="@+id/search_res"
        android:visibility="gone"
        app:cardCornerRadius="6dp"
        app:contentPadding="8dp"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/gray50"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:alpha="0"
            android:id="@+id/res_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
</FrameLayout>

<FrameLayout
    android:background="@color/scrim"
    android:visibility="gone"
    android:clickable="true"
    android:id="@+id/loadingSpinner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</FrameLayout>
</android.support.design.widget.CoordinatorLayout>
