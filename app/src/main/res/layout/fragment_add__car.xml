<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/gray50"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        tools:context=".Fragments.Add_Car_Fragment">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:background="@drawable/red_frame"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                 <EditText
                     android:id="@+id/add_title_input"
                     android:textColorHint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:paddingRight="12dp"
                    android:hint="@string/adv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:prompt="@string/city"
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/city_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/use_type_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="4dp"
                android:minHeight="36dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/automatic_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/com_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:prompt="@string/city"
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/make_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:prompt="@string/city"
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/model_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:prompt="@string/city"
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/set_spinner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/car_status_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/price_type_spinner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <EditText
                        android:id="@+id/add_price_input"
                        android:textColorHint="@color/colorPrimary"
                        android:background="@android:color/transparent"
                        android:paddingRight="12dp"
                        android:hint="@string/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>
                <View
                    android:clickable="true"
                    android:id="@+id/price_type_hover"
                    android:background="@color/scrimw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/red_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/counter_type_spiner"
                    android:spinnerMode="dropdown"
                    android:clickable="true" />
                <FrameLayout
                    android:background="@drawable/red_frame"
                    android:layout_gravity="center|left"
                    android:layout_width="36dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="4dp"
                android:background="@drawable/red_frame"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                 <EditText
                     android:id="@+id/add_counter_input"
                     android:textColorHint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:paddingRight="12dp"
                    android:hint="@string/car_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/under_worenty"
                android:textColor="@color/colorPrimary"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/under_worenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="8dp"
            android:background="@drawable/red_frame"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/more_details"
                 android:textColorHint="@color/colorPrimary"
                android:minHeight="60dp"
                android:background="@android:color/transparent"
                android:paddingRight="12dp"
                android:hint="@string/an_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <Button
            android:id="@+id/continue_btt"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/accent_btn"
            android:layout_gravity="center"
            android:text="@string/continuee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>